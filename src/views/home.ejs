<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/styles/main.css"> <!-- Adjust the path to your CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">My Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/article">Articles</a>
                  </li>
                    <% if (isAuthenticated) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                    <% } %>
                    <li>
                      <!-- Search Form -->
                      <form action="/home/search" method="GET" class="form-inline d-flex">
                        <input type="text" name="query" class="form-control mr-2" placeholder="Search..." required>
                        <button type="submit" class="btn btn-primary">Search</button>
                      </form>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <% if (isAuthenticated) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
  </header>

  <main class="container mt-5">
<!-- Articles List -->
<div class="card">
  <div class="card-header">
      <h3>All Articles</h3>
  </div>
  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-striped">
              <thead>
                  <tr>
                      <th>Title</th>
                      <th>Image</th>
                      <th>Tags</th>
                      <th>Created At</th>
                      <th>Updated At</th>
                  </tr>
              </thead>
              <tbody>
                  <% articles.forEach(article => { %>
                      <tr>
                        <td onclick="window.location.href='/article/<%= article.id %>'" style="cursor: pointer;">
                          <%= article.title %>
                        </td>
                          <td><%= article.title %></td>
                          <td>
                              <% if (article.image) { %>
                                  <img src="<%= article.image %>" alt="Article image" style="max-width: 50px;">
                              <% } %>
                          </td>
                          <td>
                              <% article.tags.forEach(tag => { %>
                                  <span class="badge bg-secondary"><%= tag %></span>
                              <% }) %>
                          </td>
                          <td><%= new Date(article.created_at).toLocaleDateString() %></td>
                          <td><%= new Date(article.updated_at).toLocaleDateString() %></td>

                      </tr>
                  <% }) %>
              </tbody>
          </table>
      </div>
  </div>
</div>


  </main>
  
  <!-- Optional custom CSS for enhanced styling -->
  <style>
    .card-header {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  
    .card-body {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  
    .card-footer {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  
    .card-body img {
      max-width: 100%;
      height: auto;
    }
  
    .tags {
      display: block;
      margin-top: 10px;
    }
  </style>
  

  <footer>
    <footer class="bg-light text-center py-3 mt-4">
        <p>&copy; <%= new Date().getFullYear() %> My Blog</p>
    </footer>
    
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
