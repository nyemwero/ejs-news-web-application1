<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= article.title %></title>
  <link rel="stylesheet" href="/styles/main.css"> <!-- Adjust the path to your CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.min.css" rel="stylesheet">
  <style>
    /* Custom styles */
    .article-container {
      max-width: 800px;
      margin: 30px auto;
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }




    .article-title {
      text-align: center;
      margin-bottom: 20px;
    }

    .article-image {
      display: block;
      max-width: 15vw;
      height: auto;
      margin: 20px auto 20px auto; /* Center the image */
    }

    .article-content {
      text-align: justify;
      margin-bottom: 20px;
    }

    .tags {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 20px;
    }

    .tags .badge {
      background-color: #007bff;
    }

    .floating-button {
      position: fixed;
      top: 50%;
      transform: translateY(-50%);
      background-color: #007bff;
      color: white;
      border: none;
      font-size: 20px;
      padding: 10px 15px;
      border-radius: 50%;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      cursor: pointer;
      z-index: 1000;
    }

    .previous-button {
      left: 10px;
    }

    .article-container {
    display: flex;
    flex-direction: column;
    justify-content: center;  /* Centers content vertically */
    height: 80vh;  /* Full viewport height */
    padding: 0 20px;  /* Optional: adds some horizontal padding */
}


    .next-button {
      right: 10px;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">My Blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/article">Articles</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
            <% } %>
            <li>
                <!-- Search Form -->
                <form action="/search" method="GET" class="search-form">
                  <input type="text" name="query" placeholder="Search..." required>
                  <button type="submit">Search</button>
                </form>
              </li>
          </ul>
          
          <ul class="navbar-nav ms-auto">
            <% if (isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Article Detail View -->
  <div class="article-container">
    <h1 class="article-title"><%= article.title %></h1>
    
    <img src="/<%= article.image %>" alt="Article Image" class="article-image" >
  
    <p class="article-content"><%= article.content %></p>

    <!-- Tags Section -->
    <div class="tags">
      <% article.tags.forEach(function(tag) { %>
        <span class="badge badge-primary"><%= tag %></span>
      <% }); %>
    </div>
  </div>

<!-- Floating Buttons for Next and Previous Articles -->
<% if (previousId) { %>
    <button class="floating-button previous-button" onclick="window.location.href='/article/<%= previousId %>'">←</button>
  <% } %>
  <% if (nextId) { %>
    <button class="floating-button next-button" onclick="window.location.href='/article/<%= nextId %>'">→</button>
  <% } %>
  
  

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.min.js"></script>
</body>
</html>
